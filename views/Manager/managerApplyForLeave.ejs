        <script>
            const today = new Date();
            today.setHours(0, 0, 0, 0);
            const todayStr = today.toISOString().split('T')[0];
          
            document.getElementById("start_date").min = todayStr;
            document.getElementById("end_date").min = todayStr;
          
            const fields = [
              "title",
              "start_date",
              "end_date",
              "type",
              "reason",
              "delegateTo",
              "delegateContent"
            ];
          
            const showError = (id, msg) => {
              document.getElementById(id + "-error").textContent = msg;
              document.getElementById(id).classList.add("invalid");
            };
          
            const clearError = (id) => {
              document.getElementById(id + "-error").textContent = "";
              document.getElementById(id).classList.remove("invalid");
            };
          
            const validators = {
              title: () => {
                const val = title.value.trim();
                if (!val) {
                  showError("title", "Title is required.");
                  return false;
                }
                clearError("title");
                return true;
              },
              
              start_date: () => {
                const start = new Date(start_date.value);
                if (isNaN(start) || start < today) {
                  showError("start_date", "Start date must be today or later.");
                  return false;
                }
                clearError("start_date");
                return true;
              },
              end_date: () => {
                const start = new Date(start_date.value);
                const end = new Date(end_date.value);
                if (isNaN(end) || end < start) {
                  showError("end_date", "End date must be after or equal to start date.");
                  return false;
                }
                const period = Math.floor((end - start) / (1000 * 60 * 60 * 24)) + 1;
                period_display.value = period;
                period.value = period;
                clearError("end_date");
                return true;
              },
              type: () => {
                if (!type.value) {
                  showError("type", "Please select leave type.");
                  return false;
                }
                clearError("type");
                return true;
              },
              reason: () => {
                const val = reason.value.trim();
                if (!val) {
                  showError("reason", "Please provide a reason.");
                  return false;
                }
                clearError("reason");
                return true;
              },
              delegateTo: () => {
                if (!delegateTo.value) {
                  showError("delegateTo", "Please select a delegate.");
                  return false;
                }
                clearError("delegateTo");
                return true;
              },
              delegateContent: () => {
                const val = delegateContent.value.trim();
                if (!val) {
                  showError("delegateContent", "Please describe delegated tasks.");
                  return false;
                }
                clearError("delegateContent");
                return true;
              }
            };
          
            // Từng trường bị disabled nếu trường trước chưa hợp lệ
            fields.forEach((field, i) => {
              const el = document.getElementById(field);
          
              el.addEventListener("focus", () => {
                if (i === 0) return;
          
                const prevField = fields[i - 1];
                if (!validators[prevField]()) {
                  showError(prevField, "Please complete this field first.");
                  el.blur(); // dời focus ra khỏi trường hiện tại
                  return;
                }
              });
          
              if (el.tagName === "SELECT" || el.type === "date") {
                el.addEventListener("change", () => validators[field]());
              } else {
                el.addEventListener("blur", () => validators[field]());
              }
            });
          
            document.getElementById("formApply").addEventListener("submit", (e) => {
              let isValid = true;
              fields.forEach(field => {
                if (!validators[field]()) isValid = false;
              });
              if (!isValid) e.preventDefault();
            });
    
          </script>

<script>
    document.addEventListener("DOMContentLoaded", function () {
        const form = document.querySelector('form[action="/manager/apply-for-leave"]');
        if (!form) return;

        const startDateInput = form.querySelector('input[name="startDate"]');
        const endDateInput = form.querySelector('input[name="endDate"]');

        function validateDates(e) {
            const today = new Date();
            today.setHours(0, 0, 0, 0);

            const start = new Date(startDateInput.value);
            const end = new Date(endDateInput.value);

            // Kiểm tra ngày quá khứ
            if (start < today) {
                alert("Ngày bắt đầu không được trong quá khứ.");
                e.preventDefault();
                return false;
            }

            if (start.toDateString() === end.toDateString()) {
                // Nếu nghỉ 1 ngày -> Phải nộp trước 2 ngày
                const minDate = new Date();
                minDate.setDate(minDate.getDate() + 2);

                if (start < minDate) {
                    alert("Đơn nghỉ 1 ngày phải được gửi trước ít nhất 2 ngày.");
                    e.preventDefault();
                    return false;
                }

                // Không xử lý shift nữa
            } else {
                // Nếu nghỉ từ 2 ngày -> Phải nộp trước 7 ngày
                const minDate = new Date();
                minDate.setDate(minDate.getDate() + 7);

                if (start < minDate) {
                    alert("Đơn nghỉ từ 2 ngày trở lên phải được gửi trước ít nhất 7 ngày.");
                    e.preventDefault();
                    return false;
                }
            }
        }

        // Bắt sự kiện submit
        form.addEventListener("submit", validateDates);
    });
